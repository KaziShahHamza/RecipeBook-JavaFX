<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="recipe.book.ViewCardRecipesController"
            prefHeight="500.0" prefWidth="600.0">
    <children>
        <ScrollPane fitToWidth="true" prefHeight="500.0" prefWidth="600.0">
            <content>
                <VBox fx:id="recipeContainer" spacing="15" padding="20">
                    <!-- Recipe cards will be added here dynamically -->
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
