<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="recipe.book.DashboardController"
            stylesheets="@styles.css">

   <HBox layoutX="14.0" layoutY="14.0" prefHeight="475.0" prefWidth="780.0" spacing="10.0">
      <children>
         <VBox alignment="CENTER" prefHeight="475.0" prefWidth="652.0" spacing="10.0" styleClass="form-container">
            <Label fx:id="welcomeLabel" text="Welcome Text" styleClass="heading-label"/>
            <Label fx:id="welcomeLabel1" text="Add your unique Recipe &amp; Share it with everyone" styleClass="subheading-label"/>

            <HBox spacing="10">
               <Label text="Recipe Name:" />
               <TextField fx:id="recipeNameField" promptText="Enter Recipe Name" styleClass="input-field"/>
            </HBox>

            <HBox spacing="10">
               <Label text="Ingredients:" />
               <TextArea fx:id="ingredientsField" promptText="Enter Ingredients" prefRowCount="2" styleClass="textarea-field"/>
            </HBox>

            <Label text="Description:" />
            <TextArea fx:id="descriptionField" promptText="Short Description" prefRowCount="3" styleClass="textarea-field"/>

            <HBox spacing="10">
               <Label text="Category:" />
               <HBox spacing="10">
                  <RadioButton fx:id="breakfastRadio" text="Breakfast" toggleGroup="$categoryGroup"/>
                  <RadioButton fx:id="lunchRadio" text="Lunch" toggleGroup="$categoryGroup"/>
                  <RadioButton fx:id="dinnerRadio" text="Dinner" toggleGroup="$categoryGroup"/>
               </HBox>
            </HBox>

            <HBox spacing="10">
               <Label text="Budget (Taka):" />
               <HBox spacing="10">
                  <RadioButton fx:id="budget100" text="100–250" toggleGroup="$budgetGroup"/>
                  <RadioButton fx:id="budget250" text="250–500" toggleGroup="$budgetGroup"/>
                  <RadioButton fx:id="budget500" text="500+" toggleGroup="$budgetGroup"/>
               </HBox>
            </HBox>

            <HBox spacing="10">
               <Label text="Cooking Time (min):" />
               <TextField fx:id="cookingTimeField" promptText="e.g. 30" styleClass="input-field"/>
            </HBox>

            <HBox spacing="10">
               <Label text="Difficulty Level:" />
               <HBox spacing="10">
                  <RadioButton fx:id="easyRadio" text="Easy" toggleGroup="$difficultyGroup"/>
                  <RadioButton fx:id="mediumRadio" text="Medium" toggleGroup="$difficultyGroup"/>
                  <RadioButton fx:id="hardRadio" text="Hard" toggleGroup="$difficultyGroup"/>
               </HBox>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
               <Button onAction="#handleSaveRecipe" text="Save" styleClass="primary-button"/>
               <Button onAction="#handleEditRecipe" text="Edit" styleClass="secondary-button"/>
               <Button onAction="#handleDeleteRecipe" text="Delete" styleClass="danger-button"/>
            </HBox>

            <Button onAction="#handleLogout" text="Logout" styleClass="secondary-button"/>
            <Button onAction="#handleViewRecipes" text="View All Recipes" styleClass="info-button"/>

            <Label fx:id="statusLabel" styleClass="status-label"/>
         </VBox>

         <TableView fx:id="recipeTable" prefHeight="476.0" prefWidth="801.0" styleClass="styled-table">
            <columns>
                <TableColumn fx:id="colName" prefWidth="100" text="Recipe Name" styleClass="table-column" />
                <TableColumn fx:id="colIngredients" prefWidth="120" text="Ingredients" styleClass="table-column" />
                <TableColumn fx:id="colDescription" prefWidth="120" text="Description" styleClass="table-column" />
                <TableColumn fx:id="colCategory" prefWidth="100" text="Category" styleClass="table-column" />
                <TableColumn fx:id="colBudget" prefWidth="80" text="Budget" styleClass="table-column" />
                <TableColumn fx:id="colTime" prefWidth="80" text="Time (min)" styleClass="table-column" />
                <TableColumn fx:id="colDifficulty" prefWidth="100" text="Difficulty" styleClass="table-column" />
            </columns>
        </TableView>

      </children>
   </HBox>

</AnchorPane>
