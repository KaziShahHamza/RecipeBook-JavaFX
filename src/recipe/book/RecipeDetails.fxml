<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="366.0" prefWidth="506.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="recipe.book.RecipeDetailsController">

    <VBox layoutX="13.0" layoutY="14.0" spacing="8">
        <Label fx:id="nameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <Label fx:id="categoryLabel" />
        <Label fx:id="budgetLabel" />
        <Label fx:id="timeLabel" />
        <Label fx:id="difficultyLabel" />
        
        <Label style="-fx-font-weight: bold;" text="Ingredients:" />
        <Label fx:id="ingredientsLabel" wrapText="true" maxWidth="480.0" />
        
        <Label style="-fx-font-weight: bold;" text="Description:" />
        <Label fx:id="descriptionLabel" wrapText="true" maxWidth="480.0" />

        <Button onAction="#handleBack" text="Back" />
    </VBox>

</AnchorPane>
