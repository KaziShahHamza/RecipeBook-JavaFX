<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" styleClass="root" stylesheets="@recipecards-style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="recipe.book.RecipeCardsController">

    <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="5.0" prefHeight="637.0" prefWidth="859.0" spacing="10.0" styleClass="main-container">

        <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="585.0" spacing="150.0" styleClass="header-bar">
            <Label styleClass="title-label" text="Recipes Gallery" />
            <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="216.0" spacing="10">
                <Label fx:id="usernameLabel" prefHeight="29.0" prefWidth="68.0" text="" visible="false" />
                <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="secondary-button" text="Logout" visible="false" />
                <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="25.0" prefWidth="57.0" styleClass="primary-button" text="Login" />
            </HBox>
        </HBox>

        <!-- Search -->
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="searchField" prefWidth="300" promptText="Search by Recipe Name..." styleClass="search-field" />
            <Button onAction="#handleSearch" styleClass="primary-button" text="Search" />
        </HBox>

        <HBox spacing="10.0">
            <!-- Filters -->
            <VBox prefHeight="445.0" prefWidth="163.0" spacing="15.0" styleClass="filter-box">
                <!-- Filter Buttons -->
                <HBox spacing="10.0">
                    <Button fx:id="filterButton" onAction="#handleFilter" styleClass="primary-button" text="Filter" />
                    <Button fx:id="resetButton" onAction="#handleReset" styleClass="secondary-button" text="Reset" />
                </HBox>

                <!-- Budget -->
                <VBox spacing="5">
                    <Label styleClass="section-label" text="Budget:" />
                    <CheckBox fx:id="budget100" text="100–250" />
                    <CheckBox fx:id="budget250" text="250–500" />
                    <CheckBox fx:id="budget500" text="500+" />
                </VBox>

                <!-- Category -->
                <VBox spacing="5">
                    <Label styleClass="section-label" text="Category:" />
                    <CheckBox fx:id="catBreakfast" text="Breakfast" />
                    <CheckBox fx:id="catLunch" text="Lunch" />
                    <CheckBox fx:id="catDinner" text="Dinner" />
                </VBox>

                <!-- Difficulty -->
                <VBox spacing="5">
                    <Label styleClass="section-label" text="Difficulty:" />
                    <CheckBox fx:id="diffEasy" text="Easy" />
                    <CheckBox fx:id="diffMedium" text="Medium" />
                    <CheckBox fx:id="diffHard" text="Hard" />
                </VBox>

                <!-- Time -->
                <VBox spacing="5">
                    <Label styleClass="section-label" text="Cooking Time (min):" />
                    <TextField fx:id="minTimeField" prefWidth="60" promptText="Min" />
                    <TextField fx:id="maxTimeField" prefWidth="60" promptText="Max" />
                </VBox>
            </VBox>

            <!-- Card Gallery -->
            <ScrollPane fitToWidth="true" prefHeight="505.0" prefWidth="661.0" styleClass="card-scroll">
                <FlowPane fx:id="cardContainer" hgap="10" prefHeight="457.0" prefWidth="637.0" vgap="10" />
            </ScrollPane>
        </HBox>

        <Button fx:id="backButton" onAction="#handleBack" prefHeight="25.0" prefWidth="63.0" styleClass="secondary-button" text="Back" />
    </VBox>
</AnchorPane>
