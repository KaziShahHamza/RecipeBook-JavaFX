<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="303.0" prefWidth="359.0" style="-fx-background-color: #FDEBD0; -fx-padding: 20; -fx-border-color: #D35400; -fx-border-width: 2;" stylesheets="@login.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="recipe.book.LoginController">

    <VBox alignment="CENTER" layoutX="60.0" layoutY="10.0" prefHeight="250.0" prefWidth="240.0" spacing="14.0">
        
        <Label styleClass="heading-label" text="Login to RecipeBook" />

        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />

        <Button fx:id="loginButton" onAction="#handleLogin" styleClass="primary-button" text="Login" />
        <Button onAction="#handleSignupLink" styleClass="secondary-button" text="Create Account" />

        <Button onAction="#handleViewCards" styleClass="info-button" text="View All Recipes" />

        <Label fx:id="errorLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" textFill="red" />

    </VBox>
</AnchorPane>
