<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: #FDEBD0; -fx-padding: 10; -fx-border-color: #D35400; -fx-border-width: 2;" stylesheets="@login.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="recipe.book.LoginController">

    <VBox alignment="CENTER" layoutX="49.0" layoutY="25.0" prefHeight="343.0" prefWidth="301.0" spacing="14.0">
        
        <Label styleClass="heading-label" text="Login to RecipeBook" />

        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />

              <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="29.0" prefWidth="111.0" styleClass="primary-button" text="Login" />
      <HBox alignment="CENTER" prefHeight="55.0" prefWidth="301.0" spacing="20.0">
         <children>
      
              <Button onAction="#handleViewCards" prefHeight="29.0" prefWidth="146.0" styleClass="info-button" text="View All Recipes" />
              <Button onAction="#handleSignupLink" prefHeight="29.0" prefWidth="141.0" styleClass="secondary-button" text="Create Account" />
         </children>
      </HBox>

        <Label fx:id="errorLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" textFill="red" />

    </VBox>
</AnchorPane>
