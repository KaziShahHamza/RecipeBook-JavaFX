<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="recipe.book.LoginController"
            prefWidth="400" prefHeight="250">

    <VBox alignment="CENTER" spacing="10.0" layoutX="50" layoutY="30">
        <Label text="Login to RecipeBook" style="-fx-font-size: 18px;" />

        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />

        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />
        <Label fx:id="errorLabel" textFill="red" />
    </VBox>

</AnchorPane>
