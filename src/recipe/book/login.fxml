<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="270.0" prefWidth="359.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="recipe.book.LoginController"
            stylesheets="@login.css"
            style="-fx-background-color: linear-gradient(to bottom, #f0f4f8, #dbe9f4); -fx-padding: 20;">
    
    <VBox alignment="CENTER" layoutX="60.0" layoutY="10.0" prefHeight="250.0" prefWidth="240.0" spacing="12.0">
        
        <Label text="Login to RecipeBook" styleClass="heading-label"/>

        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>

        <Button fx:id="loginButton" onAction="#handleLogin" text="Login" styleClass="primary-button"/>
        <Button onAction="#handleSignupLink" text="Create Account" styleClass="secondary-button"/>

        <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <!--<Button onAction="#handleViewRecipes" text="View All Recipes" styleClass="info-button"/>-->
        <Button text="View as Cards" onAction="#handleViewCards" styleClass="info-button"/>


    </VBox>

</AnchorPane>
