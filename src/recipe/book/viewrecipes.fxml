<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@viewrecipes.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="recipe.book.ViewRecipesController">

    <VBox alignment="TOP_CENTER" layoutX="20.0" spacing="10.0">
        <Label styleClass="title-label" text="All Recipes" />

        <!-- Search Field -->
        <HBox alignment="TOP_CENTER" spacing="10">
            <TextField fx:id="searchField" prefWidth="400" promptText="Search by Recipe Name..." styleClass="search-field" />
             <Button fx:id="filterButton" onAction="#handleFilter" styleClass="filter-button" text="Filter" />
             <Button fx:id="resetButton" onAction="#handleReset" styleClass="reset-button" text="Reset" />
        </HBox>

        <!-- Filter Section -->
        <HBox alignment="TOP_CENTER" spacing="30" styleClass="filter-container">
            <!-- Category Filter -->
            <VBox spacing="5" styleClass="filter-box">
                <Label styleClass="filter-label" text="Category" />
                <CheckBox fx:id="catBreakfast" text="Breakfast" />
                <CheckBox fx:id="catLunch" text="Lunch" />
                <CheckBox fx:id="catDinner" text="Dinner" />
            </VBox>

            <!-- Budget Filter -->
            <VBox spacing="5" styleClass="filter-box">
                <Label styleClass="filter-label" text="Budget" />
                <CheckBox fx:id="budget100" text="100–250" />
                <CheckBox fx:id="budget250" text="250–500" />
                <CheckBox fx:id="budget500" text="500+" />
            </VBox>

            <!-- Difficulty Filter -->
            <VBox spacing="5" styleClass="filter-box">
                <Label styleClass="filter-label" text="Difficulty" />
                <CheckBox fx:id="diffEasy" text="Easy" />
                <CheckBox fx:id="diffMedium" text="Medium" />
                <CheckBox fx:id="diffHard" text="Hard" />
            </VBox>

            <!-- Cooking Time -->
            <VBox spacing="5" styleClass="filter-box">
                <Label styleClass="filter-label" text="Cooking Time (min)" />
                <TextField fx:id="minTimeField" prefWidth="60" promptText="Min" />
                <TextField fx:id="maxTimeField" prefWidth="60" promptText="Max" />
            </VBox>

            <!-- Buttons -->
            <VBox alignment="BOTTOM_CENTER" spacing="10" />
        </HBox>

        <!-- Recipe Table -->
        <TableView fx:id="recipeTable" prefHeight="350.0" prefWidth="750.0" styleClass="recipe-table">
            <columns>
                <TableColumn fx:id="colName" prefWidth="120" text="Recipe Name" />
                <TableColumn fx:id="colIngredients" prefWidth="160" text="Ingredients" />
                <TableColumn fx:id="colDescription" prefWidth="140" text="Description" />
                <TableColumn fx:id="colCategory" prefWidth="100" text="Category" />
                <TableColumn fx:id="colBudget" prefWidth="80" text="Budget" />
                <TableColumn fx:id="colTime" prefWidth="80" text="Time (min)" />
                <TableColumn fx:id="colDifficulty" prefWidth="100" text="Difficulty" />
            </columns>
        </TableView>

        <!-- Back Button -->
        <Button onAction="#handleBack" styleClass="back-button" text="Back to Dashboard" />
      <padding>
         <Insets bottom="50.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </VBox>
</AnchorPane>
